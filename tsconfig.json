{
  "compilerOptions": {
    "declaration": true,
    "target": "es2017",
		"typeRoots": [
			"./node_modules/@types"
		],
    "lib": ["es2016"],
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "outDir": "build",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules", "build"],
}
